{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cswp-individueel/common": ["libs/frontend/common/src/index.ts"],
      "@cswp-individueel/features": ["libs/frontend/features/src/index.ts"],
      "@cswp-individueel/shared/api": ["libs/shared/api/src/index.ts"],
      "@pixel_paws/backend/user": ["libs/backend/user/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
